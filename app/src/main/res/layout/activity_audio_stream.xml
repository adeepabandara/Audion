<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_audio_stream_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <!-- Noise reduction toggle (left) + label (right) near top -->
    <LinearLayout
        android:id="@+id/noiseToggleContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/noiseRemovalSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/noiseRemovalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Reduce Noise"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Big circular button in the center -->
    <Button
        android:id="@+id/toggleButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_green" 
        android:text="Start"
        android:textColor="@android:color/white"
        android:textSize="24sp" />
        

    <!-- Amplification slider below the big button -->
    <SeekBar
        android:id="@+id/amplificationSeekBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toggleButton"
        android:layout_marginTop="24dp"
        android:max="50"
        android:progress="10" />

</RelativeLayout>
